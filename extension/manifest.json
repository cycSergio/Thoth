{
  "manifest_version": 3,
  "name": "Thoth",
  "version": "0.0.0",
  "description": "Select-to-Ask-AI (mvp)",
  "permissions": ["storage", "contextMenus"],
  "host_permissions": ["http://localhost:8787/*"],
  "background": { "service_worker": "sw.js" },
  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["content.js"], "css": ["styles.css"], "run_at": "document_end" }
  ]
}
